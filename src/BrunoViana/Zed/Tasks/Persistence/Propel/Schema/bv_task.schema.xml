<?xml version="1.0"?>
<database xmlns="spryker:schema-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:schemaLocation="spryker:schema-01 https://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\Tasks\Persistence" package="src.Orm.Zed.Tasks.Persistence">

    <table name="bv_task" idMethod="native">
        <column name="id_task" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="title" required="true" size="45" type="VARCHAR"/>
        <column name="description" required="false" type="LONGVARCHAR"/>
        <column name="status" required="true" size="11" type="ENUM" valueSet="to_do,in_progress,completed" defaultValue="to_do"/>
        <column name="due_at" required="false" type="TIMESTAMP"/>
        <column name="id_assignee" required="true" type="INTEGER"/>

        <behavior name="timestampable"/>

        <foreign-key foreignTable="spy_user" phpName="User">
            <reference local="id_assignee" foreign="id_user"/>
        </foreign-key>

        <id-method-parameter value="bv_task_pk_seq"/>
    </table>

</database>
