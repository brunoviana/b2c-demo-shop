<?xml version="1.0"?>
<transfers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">
    <transfer name="TasksBackendApiAttributes" strict="true">
        <property name="idTask" type="int"/>
        <property name="title" type="string"/>
        <property name="description" type="string"/>
        <property name="status" type="string"/>
        <property name="dueAt" type="string"/>
    </transfer>

    <transfer name="TaskCollection" strict="true">
        <property name="tasks" type="Task[]" singular="task"/>
        <property name="pagination" type="Pagination"/>
    </transfer>

    <transfer name="TaskCriteria" strict="true">
        <property name="tasksConditions" type="TaskConditions"/>
        <property name="pagination" type="Pagination"/>
        <property name="sortCollection" type="Sort[]" singular="sort"/>
    </transfer>

    <transfer name="TaskConditions" strict="true">
        <property name="taskIds" type="int[]" singular="taskId"/>
        <property name="dueAt" type="string" />
    </transfer>

    <transfer name="Task" strict="true" />

    <transfer name="Pagination" />

    <transfer name="Sort" />

</transfers>


